    <form action="/shortUrls" method="POST" class="my-4 form-inline">
      <label for="fullUrl" class="sr-only text-center">Url</label>
      <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
      <button class="btn btn-primary" type="submit">Shorten URL</button>
    </form>
    {{#if shortUrls.length}}
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Date created</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        {{#each shortUrls}}
          <tr>
            <td><a href="{{this.long}}">{{this.long}}</a></td>
            <td>{{this.dateCreated}}</td>
            <td><a href="{{this.short}}">{{this.short}}</a></td>
            <td>{{this.clicks}}</td>
            <td>
                <form method="post" action="/delete/{{this._id}}">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-trash" aria-hidden="true"></i></button>
                </form>  
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <h3>Total Clicks: {{totalClicks}}</h3>
    {{/if}}
  </div>